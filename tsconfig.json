{
  "compilerOptions": {
    "target": "ES2018",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["vite/client"],
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./src/",
    "paths": {
        "@api/*": ["./api/*"],
        "@components/*": ["./components/*"],
        "@utils/*": ["./utils/*"],
    }
  },    
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
}
